    <script>
      function home() {
        //click to go to home page
        location.href = "/";
      }

      function thumbup() {
        document.getElementById("feedback").innerText="Thank you for your feedback!";
        console.log("user click up");
        //record in user history
        setTimeout(function(){
          location.href = "/up";
        },3000);
      }

